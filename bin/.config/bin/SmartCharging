#!/bin/bash

LC_ALL=C
count=0;

while true; do
    battery=$(cat /sys/class/power_supply/BAT0/capacity)
    power=`grep -o "[0-1]" /sys/class/power_supply/AC/uevent`
    if [[ $power -eq 1 && $count -eq 0 ]]; then
        count=1;
        notify-send -t 3000 "Charge Plugin $battery%"
        sleep 1s
        if [[ $battery -eq 100 ]]; then
            notify-send -u critical -t 0 "Battery Fully charged ðŸ”‹"
            sleep 2s
            continue;
        fi
    fi
    if [[ $power -eq 0 && $count -eq 1 ]]; then
        count=0
        notify-send -t 3000 "Charge Removed $battery%"
        sleep 2s
        if [ $battery -eq 50 ]; then
            notify-send -u critical -t 3000 "$battery% Remain"
            sleep 2m
            continue;
        fi

        if [ $battery -eq 20 ]; then
            notify-send -u critical -t 0 "$battery$ Remain"
            sleep 2m
            continue;
        fi

        if [ $battery -lt 10 ]; then
            notify-send -u critical -t 3000 "30s Going to Sleep baby ðŸ˜ª"
            sleep 30s
            power=`grep -o "[0-1]" /sys/class/power_supply/AC/uevent`
            echo $power
            if [[ $power -eq 1 ]]; then
                notify-send -t 3000 "Good boi You Pluged The Charge"
                continue;
            fi
            systemctl suspend;
            continue;
        fi
    fi
    sleep 3s
done
